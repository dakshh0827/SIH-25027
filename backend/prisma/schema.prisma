// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ===================================================================
// ENUMS - For defining roles and types
// ===================================================================

enum Role {
  ADMIN
  NGO
  PANCHAYAT
}

// ===================================================================
// CORE USER MODEL (Updated)
// ===================================================================

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  fullName  String
  password  String
  role      Role
  isVerified Boolean  @default(false) // User's email verification status

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  adminProfile    AdminProfile?
  ngoProfile      NgoProfile?
  panchayatProfile PanchayatProfile?
  commonProfile   CommonProfile?
  otpCodes        OTPCode[] // Relation to OTP codes
}

// ===================================================================
// NEW MODEL for OTP Codes
// ===================================================================

model OTPCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String   // Hashed OTP code
  type      String   // e.g., 'verification', 'password_reset'
  expiresAt DateTime
  verified  Boolean  @default(false)
  attempts  Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to User model
  user   User   @relation(fields: [email], references: [email], onDelete: Cascade)

  @@index([email, type])
}


// ===================================================================
// ROLE-SPECIFIC PROFILE MODELS
// ===================================================================

// Step 3 for ADMINS
model AdminProfile {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  nccrGovtId        String @unique
  idProofUrl        String
  metamaskAddress   String @unique

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @db.ObjectId
}

// Step 3 for NGOS (Updated)
model NgoProfile {
  id                        String @id @default(auto()) @map("_id") @db.ObjectId
  legalName                 String
  registrationNumber        String @unique
  registrationType          String
  registrationCertificateUrl String
  panNumber                 String @unique
  yearOfEstablishment       Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @db.ObjectId
}

// Step 3 for PANCHAYATS (Updated)
model PanchayatProfile {
  id                         String @id @default(auto()) @map("_id") @db.ObjectId
  panchayatCode              String @unique
  panchayatName              String
  sarpanchName               String
  authorizedRepresentativeIdProofUrl String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @db.ObjectId
}

// ===================================================================
// COMMON PROFILE MODEL
// ===================================================================

model CommonProfile {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  displayName         String
  officialAddress     String
  jurisdictionState   String
  district            String
  primaryContactName  String
  primaryContactRole  String
  primaryContactPhone String
  primaryContactEmail String
  latitude            Float
  longitude           Float
  blockchainWallet    String @unique
  consent             Boolean @default(false)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique @db.ObjectId
}